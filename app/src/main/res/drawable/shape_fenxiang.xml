<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#ffffff"/>
                    <corners android:topLeftRadius="10dp"
                        android:topRightRadius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- 第一层 -->
            <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp">
                <shape>
                    <solid android:color="#10A9A9A9"/>
                    <corners android:topLeftRadius="10dp"
                        android:topRightRadius="10dp"/>
                    <!-- 描边 -->
                    <stroke android:width="0dp" android:color="#1AA9A9A9" />
                </shape>
            </item>
            <!-- 第二层 -->
            <item android:bottom="0dp" android:right="0dp" android:left="0dp" android:top="4dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:topLeftRadius="10dp"
                        android:topRightRadius="10dp"/>
                    <!-- 描边 -->
                    <stroke android:width="4dp" android:color="#FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
