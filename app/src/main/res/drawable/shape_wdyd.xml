<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#ffffff"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- 第一层 -->
            <item android:left="2dp" android:top="0dp" android:right="2dp" android:bottom="0dp">
                <shape>
                    <solid android:color="#1AA9A9A9"/>
                    <corners android:radius="5dp"/>
                    <!-- 描边 -->
                    <stroke android:width="0dp" android:color="#1AA9A9A9" />
                </shape>
            </item>
            <!-- 第二层 -->
            <item android:bottom="1dp" android:right="3dp" android:left="3dp" android:top="1dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="5dp"/>
                    <!-- 描边 -->
                    <stroke android:width="1dp" android:color="#FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
