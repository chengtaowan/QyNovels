<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#333333"/>
    <ImageView
        android:id="@+id/xq_bj"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:alpha="0.2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:id="@+id/xq_rl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/xq_book"
                android:layout_width="72dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="22dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/xq_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冰与火之歌权力的游戏"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="8.5"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/xq_num"/>
                    <com.jdhd.qynovels.widget.RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starHalfRes="@mipmap/xqy_bx"
                        app:starSelectedRes="@mipmap/xqy_yx"
                        app:starWidth="18dp"
                        app:checked="false"
                        app:starHeight="18dp"
                        app:starDistance="3dp"
                        app:starIsFull="false"
                        app:starEmptyRes="@mipmap/xqy_yx"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/xq_start"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/xq_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="乔治.马丁"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="【著】"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/xq_finishtype"
                        android:layout_width="40dp"
                        android:layout_height="18dp"
                        android:background="@drawable/shap_xq"
                        android:gravity="center"
                        android:text="连载中"
                        android:textColor="#fff"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/xq_zs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="1234万字"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/xq_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/back_b" />
</RelativeLayout>