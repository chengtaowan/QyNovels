        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:layout_below="@+id/tex"
        android:id="@+id/jb">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25sp"
            android:src="@mipmap/back_h"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/tx_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="提现"
            android:textColor="#2F3236"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/tx_kp"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币余额"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:id="@+id/jbye"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jbye"
            android:layout_marginTop="2dp"
            android:id="@+id/tx">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18,880"
                android:textColor="#ffffffff"
                android:textSize="23sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/ye"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ye"
                android:layout_marginTop="10dp"
                android:text="约1.88元"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/item_jb"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
