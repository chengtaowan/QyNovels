<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:orientation="vertical"
    android:background="#fff">
    <com.jdhd.qynovels.widget.NoScrollViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp"
        android:orientation="vertical"
        android:layout_above="@+id/rg"></com.jdhd.qynovels.widget.NoScrollViewPager>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/rg"
        android:layout_weight="93"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rb_case"
        android:text="书架"
        android:button="@null"
        android:textSize="10sp"
        android:textColor="@drawable/selece_cocor"
        android:drawableTop="@drawable/select_case"
        android:gravity="center"
        android:checked="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="9dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb_shop"
            android:text="书城"
            android:button="@null"
            android:textSize="10sp"
            android:textColor="@drawable/selece_cocor"
            android:drawableTop="@drawable/select_shop"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="9dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb_fl"
            android:text="福利"
            android:button="@null"
            android:textSize="10sp"
            android:textColor="@drawable/selece_cocor"
            android:drawableTop="@drawable/select_fl"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="9dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb_wd"
            android:text="我的"
            android:button="@null"
            android:textSize="10sp"
            android:textColor="@drawable/selece_cocor"
            android:drawableTop="@drawable/select_wd"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="9dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_above="@+id/ll"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll"
        android:background="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/delete"
            android:text="删除"
            android:textSize="14sp"
            android:textColor="#2F3236"
            android:gravity="center"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e8e8e8"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/cancle"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#2F3236"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>