<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.QdActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@mipmap/qd_bg" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/back_h"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:id="@+id/qd_back"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:src="@mipmap/qd_lx"
        android:layout_toRightOf="@+id/qd_tb"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/qd_lx"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/qd_lx"
        android:text="2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#EEAC36"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/qd_tian"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="17dp"
        android:layout_toRightOf="@+id/qd_tian"
        android:src="@mipmap/qd_day"
        android:layout_marginTop="47dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/shape_qd_bj"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb_wc"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb_on"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb_on"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb_on"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb_on"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginRight="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7天"
                    android:textColor="#7F8184"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/qd_jb_on"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/shap_qd"
            android:id="@+id/qd_qd"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立即签到"
                android:textColor="#FFFCF0"
                android:textSize="14sp"
                android:id="@+id/qd_ljqd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到成功"
                android:textColor="#fffffcf0"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:id="@+id/qd_cg"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看视频再领50金币"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:id="@+id/qd_sp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到规则"
        android:textColor="#ff2f3236"
        android:textSize="14sp"
        android:layout_below="@+id/ll"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/qd_gz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.提现"
        android:textColor="#ff828486"
        android:textSize="12sp"
        android:layout_below="@+id/qd_gz"
        android:id="@+id/qd_tx"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.提现"
        android:textColor="#ff828486"
        android:textSize="12sp"
        android:layout_below="@+id/qd_tx"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:layout_width="41dp"
        android:layout_height="57dp"
        android:src="@mipmap/qd_tb"
        android:layout_toRightOf="@+id/qd_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/qd_tb" />
</RelativeLayout>