<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="35dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重磅推荐"
        android:textColor="#2F3236"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:id="@+id/tj_tex"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tj_ll"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="100dp"
            android:src="@mipmap/a"
            android:id="@+id/gf_book"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434D5A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:text="冰与火之歌权力的游戏"
                android:id="@+id/gf_name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.0"
                    android:textSize="16sp"
                    android:textColor="#EF8E44"
                    android:id="@+id/gf_grade"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textSize="9sp"
                    android:textColor="#EF8E44" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:lines="2"
                android:text="1111111111111111111111111111111111111111111111111111111111111111111111111111111111"
                android:textColor="#828486"
                android:textSize="14sp"
                android:id="@+id/gf_des"
                android:ellipsize="end"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完结"
                android:layout_alignParentBottom="true"
                android:textColor="#828486"
                android:textSize="11sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/gf_wj"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234万字"
                android:layout_alignParentBottom="true"
                android:textColor="#828486"
                android:textSize="11sp"
                android:layout_toRightOf="@+id/gf_wj"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/gf_num"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="现代修真"
                android:textSize="10sp"
                android:textColor="#828486"
                android:id="@+id/gf_type"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="#FAFAFA"
                android:layout_marginRight="2dp"/>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tj_rv"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>