<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.JbActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#fff"
        android:id="@+id/tex"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:layout_below="@+id/tex"
        android:id="@+id/jb">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25sp"
            android:src="@mipmap/back_h"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/jb_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="我的金币"
            android:textColor="#2F3236"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/jb"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tupian">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@mipmap/my_kp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币余额"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:id="@+id/jbye"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jbye"
            android:layout_marginTop="2dp"
            android:id="@+id/tx">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18,880"
                android:textColor="#ffffffff"
                android:textSize="23sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/ye"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ye"
                android:layout_marginTop="10dp"
                android:text="约1.88元"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/item_jb"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="立即提现"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="22dp"
                android:background="@drawable/item_ljtx"
                android:id="@+id/jb_tx"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tx"
            android:id="@+id/ljjb"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日金币"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计赚取金币"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/ljjb"
            android:layout_marginTop="5dp"
            android:background="#FFF6C8"
            android:id="@+id/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000=1元"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金币明细"
        android:textColor="#ff2f3236"
        android:textSize="18sp"
        android:layout_below="@+id/tupian"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:id="@+id/mx"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mx"
        android:layout_marginTop="5dp"
        android:id="@+id/jb_rv"
        android:layout_above="@+id/zi"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="— 系统展示最近100条记录 —"
        android:textColor="#ff828486"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/zi"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>