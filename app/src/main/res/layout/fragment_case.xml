<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.CaseFragment"
    android:orientation="vertical"
    android:background="#fff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-40dp"
        android:background="@mipmap/sj_bg">
    </ImageView>
    <ImageView
        android:layout_width="121dp"
        android:layout_height="16dp"
        android:src="@mipmap/sj_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:src="@mipmap/sj_qd"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38dp"
        android:layout_marginRight="15dp"
        android:id="@+id/sj_qd"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/sj_ls"
        android:layout_toLeftOf="@+id/sj_qd"
        android:layout_marginRight="15dp"
        android:layout_marginTop="38dp"
        android:id="@+id/sj_ls"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/home_ss"
        android:layout_toLeftOf="@+id/sj_ls"
        android:layout_marginRight="15dp"
        android:layout_marginTop="38dp"
        android:id="@+id/sj_ss"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sr"
        android:layout_marginTop="64dp">
    <com.jdhd.qynovels.widget.MRefreshHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/case_header"></com.jdhd.qynovels.widget.MRefreshHeader>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sj_rv"
        android:descendantFocusability="blocksDescendants"></androidx.recyclerview.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <include layout="@layout/item_jz"/>
</RelativeLayout>