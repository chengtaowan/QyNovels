<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.CaseFragment"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#fff"
        android:id="@+id/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ss"
        android:layout_below="@+id/line">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:id="@+id/search"
            android:src="@mipmap/ss"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:id="@+id/tab"
            app:tabGravity="center"
            app:tabTextAppearance="@style/tabtext"
            app:tabSelectedTextColor="#E8564E"
            app:tabTextColor="#2F3236"></com.google.android.material.tabs.TabLayout>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_vp"
        android:layout_below="@+id/ss"></androidx.viewpager.widget.ViewPager>
    <include layout="@layout/item_jz"/>


</RelativeLayout>