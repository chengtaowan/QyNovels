<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MorePhbActivity"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="#fff"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25sp"
            android:src="@mipmap/back_h"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/more_back"/>

        <TextView
            android:id="@+id/more_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="玄幻"
            android:textColor="#2F3236"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25sp"
            android:src="@mipmap/home_ss"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:id="@+id/more_ss"/>
    </RelativeLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:id="@+id/more_rg">
        <RadioButton
            android:layout_width="55dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_more"
            android:button="@null"
            android:text="按热度"
            android:textColor="@drawable/select_moretext"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/more_rd"/>
        <RadioButton
            android:layout_width="55dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_more"
            android:button="@null"
            android:text="按更新"
            android:textColor="@drawable/select_moretext"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/more_gx"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FAFAFA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/more_ll"></LinearLayout>
</LinearLayout>