<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PhbActivity"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:id="@+id/pp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/back_h"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/phb_back"/>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/phb_back"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:id="@+id/phb_tab"
            app:tabTextAppearance="@style/phbtabtext"
            app:tabSelectedTextColor="#E8564E"
            app:tabTextColor="#2F3236"></com.google.android.material.tabs.TabLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FAFAFA"
        android:layout_below="@+id/pp"
        android:id="@+id/line"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/phb_vp"
        android:background="#fff"
        android:layout_below="@+id/line"></androidx.viewpager.widget.ViewPager>
    <include layout="@layout/item_jz"/>
</RelativeLayout>