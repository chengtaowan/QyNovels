<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">#00ffffff</item>
        <item name="android:windowAnimationStyle">@style/anim_fade</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="tabtext" >
        <item name="android:textColor">#2F3236</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="phbtabtext" >
        <item name="android:textColor">#2F3236</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="phbseltabtext" >
        <item name="android:textColor">#E8564E</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#EAECF0</item>
        <item name="colorControlActivated">#EAECF0</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
    </style>


    <!--activity 淡入淡出-->
    <style name="AnimActivity" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="anim_fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_fade_out</item>
    </style>

    <!-- TextAppearance:修改 -->
    <style name="NB.Theme.TextAppearance"/>
    <!--Common-->
    <style name="NB.Theme" parent="AppTheme"/>


    <!--Toolbar-->
    <style name="Theme.ToolBar.Menu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 设置-弹窗的背景-颜色-->
        <item name="android:colorBackground">#fff</item>
        <!-- 字体的颜色-->
        <item name="android:textColor">#000</item>
        <!-- 字体大小-->
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <!-- 用于替换菜单的三个小白点，换成自已的图片-->
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.Menu1</item>
        <!--用于控制menu弹出的位置，位于toolbar的下面，而不是上面-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!-- 用于修改item默认的分割线-->
        <item name="android:dropDownListViewStyle">@style/dropDownStyle</item>
        <item name="dropDownListViewStyle">@style/dropDownStyle</item>
    </style>


    <style name="ActionButton.Overflow.Menu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
    <style name="ActionButton.Overflow.Menu1" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>


    <!--用于修改popmenu的分割线-->
    <style name="dropDownStyle" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selector_common_bg</item>
        <item name="android:divider">#727272</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>


    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
       <item name="android:button">@drawable/checkbox_style</item>
    </style>



    <style name="NoActionTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverFlowMenuTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>
</resources>
