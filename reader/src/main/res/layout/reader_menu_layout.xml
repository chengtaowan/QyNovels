<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_reader_setting"
        android:clickable="true"
        android:focusable="true"
        app:theme="@style/OverFlowMenuTheme"
        app:title="@string/app_name">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_300"
        android:layout_gravity="bottom"
        android:background="@color/bg_reader_setting"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_100"
            android:layout_marginTop="@dimen/qb_px_40"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_prev_chapter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/qb_px_50"
                android:gravity="center"
                android:text="上一章"
                android:textColor="@color/setting_color"
                android:textSize="@dimen/qb_px_50" />

            <SeekBar
                android:id="@+id/chapter_seek_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <TextView
                android:id="@+id/text_next_chapter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/qb_px_50"
                android:gravity="center"
                android:text="下一章"
                android:textColor="@color/setting_color"
                android:textSize="@dimen/qb_px_50" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/reader_catalogue"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:src="@mipmap/yuedu_ml"
                />
            <ImageView
                android:id="@+id/daynight"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:src="@drawable/yuedu_yj"
                />
            <ImageView
                android:id="@+id/setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:src="@mipmap/yuedu_zt"
                />
        </RelativeLayout>

    </LinearLayout>

</merge>